import React, { useState, useRef, useEffect } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { Send, MapPin, Loader2 } from 'lucide-react';
import { Input } from "@/components/ui/input";
import { Button } from "@/components/ui/button";
import { Avatar, AvatarFallback, AvatarImage } from "@/components/ui/avatar";
import { base44 } from '@/api/base44Client';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { format } from 'date-fns';

export default function ChatSection({ currentUser }) {
  const [message, setMessage] = useState('');
  const [location, setLocation] = useState('');
  const messagesEndRef = useRef(null);
  const queryClient = useQueryClient();

  const { data: messages = [], isLoading } = useQuery({
    queryKey: ['chatMessages'],
    queryFn: () => base44.entities.ChatMessage.list('-created_date', 50),
    refetchInterval: 5000,
  });

  const sendMutation = useMutation({
    mutationFn: (data) => base44.entities.ChatMessage.create(data),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['chatMessages'] });
      setMessage('');
      setLocation('');
    },
  });

  useEffect(() => {
    messagesEndRef.current?.scrollIntoView({ behavior: 'smooth' });
  }, [messages]);

  const handleSend = (e) => {
    e.preventDefault();
    if (!message.trim()) return;
    
    sendMutation.mutate({
      message: message.trim(),
      location: location.trim() || null,
      user_name: currentUser?.full_name || 'Anonymous',
      user_avatar: currentUser?.avatar || null,
    });
  };

  const reversedMessages = [...messages].reverse();

  return (
    <motion.div
      className="bg-white/5 backdrop-blur-xl rounded-2xl border border-white/10 overflow-hidden h-[500px] flex flex-col"
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
    >
      <div className="p-4 border-b border-white/10">
        <h3 className="text-white font-semibold">Community Feedback</h3>
        <p className="text-white/50 text-sm">Share air quality reports from your location</p>
      </div>

      <div className="flex-1 overflow-y-auto p-4 space-y-4">
        {isLoading ? (
          <div className="flex items-center justify-center h-full">
            <Loader2 className="w-6 h-6 text-teal-400 animate-spin" />
          </div>
        ) : reversedMessages.length === 0 ? (
          <div className="flex items-center justify-center h-full text-white/30">
            No messages yet. Be the first to share!
          </div>
        ) : (
          <AnimatePresence>
            {reversedMessages.map((msg, index) => (
              <motion.div
                key={msg.id}
                initial={{ opacity: 0, y: 10 }}
                animate={{ opacity: 1, y: 0 }}
                exit={{ opacity: 0, y: -10 }}
                className="flex items-start gap-3"
              >
                <Avatar className="w-8 h-8 flex-shrink-0">
                  {msg.user_avatar && <AvatarImage src={msg.user_avatar} />}
                  <AvatarFallback className="bg-teal-500/20 text-teal-400 text-xs">
                    {(msg.user_name || 'A')[0].toUpperCase()}
                  </AvatarFallback>
                </Avatar>
                <div className="flex-1 min-w-0">
                  <div className="flex items-center gap-2">
                    <span className="text-white text-sm font-medium">
                      {msg.user_name || 'Anonymous'}
                    </span>
                    <span className="text-white/30 text-xs">
                      {msg.created_date && format(new Date(msg.created_date), 'MMM d, h:mm a')}
                    </span>
                  </div>
                  <p className="text-white/70 text-sm mt-1">{msg.message}</p>
                  {msg.location && (
                    <div className="flex items-center gap-1 mt-2 text-teal-400 text-xs">
                      <MapPin className="w-3 h-3" />
                      {msg.location}
                    </div>
                  )}
                </div>
              </motion.div>
            ))}
          </AnimatePresence>
        )}
        <div ref={messagesEndRef} />
      </div>

      <form onSubmit={handleSend} className="p-4 border-t border-white/10 space-y-3">
        <div className="flex items-center gap-2">
          <MapPin className="w-4 h-4 text-white/40" />
          <Input
            value={location}
            onChange={(e) => setLocation(e.target.value)}
            placeholder="Your location (optional)"
            className="flex-1 bg-white/5 border-white/10 text-white placeholder:text-white/30 text-sm h-8"
          />
        </div>
        <div className="flex gap-2">
          <Input
            value={message}
            onChange={(e) => setMessage(e.target.value)}
            placeholder="Share air quality feedback..."
            className="flex-1 bg-white/5 border-white/10 text-white placeholder:text-white/30"
          />
          <Button
            type="submit"
            disabled={!message.trim() || sendMutation.isPending}
            className="bg-teal-500 hover:bg-teal-600 text-white px-4"
          >
            {sendMutation.isPending ? (
              <Loader2 className="w-4 h-4 animate-spin" />
            ) : (
              <Send className="w-4 h-4" />
            )}
          </Button>
        </div>
      </form>
    </motion.div>
  );
}
