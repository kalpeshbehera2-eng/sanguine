import React from 'react';
import { motion } from 'framer-motion';
import { 
  Home, 
  Droplets, 
  Fan, 
  Shield, 
  Leaf, 
  Wind, 
  Eye, 
  Heart 
} from 'lucide-react';

const ICON_MAP = {
  home: Home,
  droplets: Droplets,
  fan: Fan,
  shield: Shield,
  leaf: Leaf,
  wind: Wind,
  eye: Eye,
  heart: Heart,
};

export default function PrecautionCard({ icon, title, description, color, index }) {
  const Icon = ICON_MAP[icon] || Shield;
  
  return (
    <motion.div
      className="group bg-white/5 backdrop-blur-xl rounded-2xl p-5 border border-white/10 hover:border-white/20 transition-all cursor-pointer"
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ delay: 0.1 * index }}
      whileHover={{ scale: 1.02, y: -5 }}
    >
      <div 
        className="w-12 h-12 rounded-xl flex items-center justify-center mb-4 transition-transform group-hover:scale-110"
        style={{ backgroundColor: `${color}20` }}
      >
        <Icon className="w-6 h-6" style={{ color }} />
      </div>
      <h3 className="text-white font-semibold mb-2">{title}</h3>
      <p className="text-white/60 text-sm leading-relaxed">{description}</p>
    </motion.div>
  );
}
