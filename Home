import React, { useState, useEffect } from 'react';
import { motion } from 'framer-motion';
import { Wind, Thermometer, Droplets, Eye, RefreshCw, Loader2 } from 'lucide-react';
import { base44 } from '@/api/base44Client';
import { useQuery } from '@tanstack/react-query';
import AQIGauge, { getAQILevel } from '../components/aqi/AQIGauge';
import PM25Card from '../components/aqi/PM25Card';
import AQILegend from '../components/aqi/AQILegend';
import LocationSearch from '../components/aqi/LocationSearch';

export default function Home() {
  const [currentLocation, setCurrentLocation] = useState('New Delhi, India');
  const [isLoadingLocation, setIsLoadingLocation] = useState(false);
  const [aqiData, setAqiData] = useState({
    aqi: 156,
    pm25: 68,
    pm10: 120,
    temperature: 28,
    humidity: 45,
    visibility: 3.2,
  });
  const [lastUpdated, setLastUpdated] = useState(new Date());

  const fetchAQIData = async (location) => {
    // Simulate realistic AQI data based on location
    const locationHash = location.split('').reduce((acc, char) => acc + char.charCodeAt(0), 0);
    const baseAQI = 50 + (locationHash % 250);
    
    return {
      aqi: Math.floor(baseAQI + Math.random() * 50),
      pm25: Math.floor((baseAQI * 0.5) + Math.random() * 30),
      pm10: Math.floor((baseAQI * 0.8) + Math.random() * 40),
      temperature: Math.floor(20 + Math.random() * 15),
      humidity: Math.floor(30 + Math.random() * 40),
      visibility: parseFloat((2 + Math.random() * 8).toFixed(1)),
    };
  };

  const { data, isLoading, refetch } = useQuery({
    queryKey: ['aqi', currentLocation],
    queryFn: () => fetchAQIData(currentLocation),
    onSuccess: (data) => {
      setAqiData(data);
      setLastUpdated(new Date());
    },
    refetchInterval: 300000, // Refresh every 5 minutes
    enabled: !!currentLocation,
  });

  useEffect(() => {
    if (data) {
      setAqiData(data);
      setLastUpdated(new Date());
    }
  }, [data]);

  const handleLocationSelect = (location) => {
    setCurrentLocation(location);
  };

  const handleLiveLocation = async () => {
    setIsLoadingLocation(true);
    
    if (!navigator.geolocation) {
      alert('Geolocation is not supported by your browser');
      setIsLoadingLocation(false);
      return;
    }

    try {
      const position = await new Promise((resolve, reject) => {
        navigator.geolocation.getCurrentPosition(resolve, reject, {
          enableHighAccuracy: true,
          timeout: 15000,
          maximumAge: 0
        });
      });

      const { latitude, longitude } = position.coords;
      
      // Use OpenStreetMap Nominatim for reverse geocoding
      try {
        const response = await fetch(
          `https://nominatim.openstreetmap.org/reverse?format=json&lat=${latitude}&lon=${longitude}`,
          {
            headers: {
              'Accept': 'application/json',
              'User-Agent': 'BreatheSmarter/1.0'
            }
          }
        );
        
        if (!response.ok) throw new Error('Geocoding failed');
        
        const data = await response.json();
        const city = data.address?.city || data.address?.town || data.address?.village || data.address?.state || 'Unknown City';
        const country = data.address?.country || 'Unknown Country';
        setCurrentLocation(`${city}, ${country}`);
      } catch (error) {
        console.error('Reverse geocoding error:', error);
        setCurrentLocation(`Your Location (${latitude.toFixed(4)}, ${longitude.toFixed(4)})`);
      }
    } catch (error) {
      console.error('Geolocation error:', error);
      if (error.code === 1) {
        alert('Location access denied. Please enable location permissions in your browser settings.');
      } else if (error.code === 2) {
        alert('Location unavailable. Please check your device settings.');
      } else if (error.code === 3) {
        alert('Location request timeout. Please try again.');
      } else {
        alert('Unable to get your location. Please try again.');
      }
    } finally {
      setIsLoadingLocation(false);
    }
  };

  const level = getAQILevel(aqiData.aqi);

  const additionalMetrics = [
    { icon: Wind, label: 'PM10', value: `${aqiData.pm10}`, unit: 'µg/m³', color: '#f97316' },
    { icon: Thermometer, label: 'Temperature', value: `${aqiData.temperature}`, unit: '°C', color: '#ef4444' },
    { icon: Droplets, label: 'Humidity', value: `${aqiData.humidity}`, unit: '%', color: '#3b82f6' },
    { icon: Eye, label: 'Visibility', value: `${aqiData.visibility}`, unit: 'km', color: '#8b5cf6' },
  ];

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 p-4 md:p-6 lg:p-8">
      <div className="max-w-7xl mx-auto">
        {/* Header */}
        <motion.div 
          className="text-center mb-8"
          initial={{ opacity: 0, y: -20 }}
          animate={{ opacity: 1, y: 0 }}
        >
          <h1 className="text-3xl md:text-4xl font-bold text-white mb-2">
            Real-Time Air Quality
          </h1>
          <p className="text-white/50 text-sm">
            Last updated: {lastUpdated.toLocaleTimeString()}
          </p>
        </motion.div>

        {/* Location Search */}
        <div className="mb-8">
          <LocationSearch
            onLocationSelect={handleLocationSelect}
            onLiveLocation={handleLiveLocation}
            isLoadingLocation={isLoadingLocation}
            currentLocation={currentLocation}
          />
        </div>

        {isLoading ? (
          <div className="flex items-center justify-center h-64">
            <Loader2 className="w-10 h-10 text-teal-400 animate-spin" />
          </div>
        ) : (
          <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
            {/* Main AQI Display */}
            <motion.div 
              className={`lg:col-span-2 bg-gradient-to-br ${level.bg} backdrop-blur-xl rounded-3xl p-6 md:p-8 border border-white/10`}
              initial={{ opacity: 0, scale: 0.95 }}
              animate={{ opacity: 1, scale: 1 }}
            >
              <div className="flex flex-col md:flex-row items-center justify-between gap-6">
                <div className="text-center md:text-left">
                  <h2 className="text-white/70 text-lg mb-2">Air Quality Index</h2>
                  <AQIGauge value={aqiData.aqi} size="large" />
                </div>
                
                <div className="flex-1 grid grid-cols-2 gap-4 w-full md:w-auto">
                  {additionalMetrics.map((metric, index) => (
                    <motion.div
                      key={metric.label}
                      className="bg-white/5 backdrop-blur rounded-xl p-4 border border-white/10"
                      initial={{ opacity: 0, y: 20 }}
                      animate={{ opacity: 1, y: 0 }}
                      transition={{ delay: 0.1 * index }}
                    >
                      <div className="flex items-center gap-2 mb-2">
                        <metric.icon className="w-4 h-4" style={{ color: metric.color }} />
                        <span className="text-white/50 text-xs">{metric.label}</span>
                      </div>
                      <div className="flex items-baseline gap-1">
                        <span className="text-white text-xl font-bold">{metric.value}</span>
                        <span className="text-white/40 text-xs">{metric.unit}</span>
                      </div>
                    </motion.div>
                  ))}
                </div>
              </div>

              <button
                onClick={() => refetch()}
                className="mt-6 flex items-center gap-2 text-white/50 hover:text-white transition-colors mx-auto md:mx-0"
              >
                <RefreshCw className={`w-4 h-4 ${isLoading ? 'animate-spin' : ''}`} />
                <span className="text-sm">Refresh Data</span>
              </button>
            </motion.div>

            {/* Sidebar */}
            <div className="space-y-6">
              <PM25Card value={aqiData.pm25} />
              <AQILegend />
            </div>
          </div>
        )}

        {/* Health Recommendations based on AQI */}
        <motion.div
          className="mt-8 bg-white/5 backdrop-blur-xl rounded-2xl p-6 border border-white/10"
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.5 }}
        >
          <h3 className="text-white font-semibold mb-4">Health Recommendations</h3>
          <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
            {getHealthRecommendations(aqiData.aqi).map((rec, index) => (
              <div 
                key={index}
                className="flex items-start gap-3 p-3 bg-white/5 rounded-xl"
              >
                <div 
                  className="w-8 h-8 rounded-lg flex items-center justify-center flex-shrink-0"
                  style={{ backgroundColor: `${level.color}20` }}
                >
                  <rec.icon className="w-4 h-4" style={{ color: level.color }} />
                </div>
                <div>
                  <p className="text-white text-sm font-medium">{rec.title}</p>
                  <p className="text-white/50 text-xs mt-1">{rec.description}</p>
                </div>
              </div>
            ))}
          </div>
        </motion.div>
      </div>
    </div>
  );
}

function getHealthRecommendations(aqi) {
  const recommendations = [
    {
      icon: Wind,
      title: aqi > 100 ? 'Limit Outdoor Activities' : 'Enjoy Outdoors',
      description: aqi > 100 ? 'Reduce prolonged exertion outdoors' : 'Air quality is acceptable for outdoor activities',
    },
    {
      icon: Eye,
      title: aqi > 150 ? 'Wear N95 Mask' : 'Stay Informed',
      description: aqi > 150 ? 'Use a proper mask when going outside' : 'Monitor air quality updates regularly',
    },
    {
      icon: Droplets,
      title: 'Stay Hydrated',
      description: 'Drink plenty of water to help your body cope with pollution',
    },
  ];
  return recommendations;
}
